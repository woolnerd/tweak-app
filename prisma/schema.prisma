datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Fixture {
  id                 Int                  @id @default(autoincrement())
  name               String               @unique
  notes              String?
  assigned           Boolean              @default(false)
  fixtureAssignments FixtureAssignment[]
  manufacturer       Manufacturer         @relation(fields: [manufacturerId], references: [id])
  manufacturerId     Int
  profilesOnFixtures ProfilesOnFixtures[]
  patches            Patch[]
}

model Profile {
  id                 Int                  @id @default(autoincrement())
  name               String
  channels           String
  fixtureAssignments FixtureAssignment[]
  profilesOnFixtures ProfilesOnFixtures[]
  patches            Patch[]
}

model ProfilesOnFixtures {
  fixture   Fixture @relation(fields: [fixtureId], references: [id])
  fixtureId Int
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int

  @@id([fixtureId, profileId])
}

model FixtureAssignment {
  id        Int     @id @default(autoincrement())
  title     String
  channel   Int
  value     Int
  fixture   Fixture @relation(fields: [fixtureId], references: [id])
  fixtureId Int
  profile   Profile @relation(fields: [profileId], references: [id])
  profileId Int
  scenes    Scene[]
}

model Manufacturer {
  id       Int       @id @default(autoincrement())
  name     String
  website  String?
  notes    String?
  fixtures Fixture[]
}

model Scene {
  id                 Int                 @id @default(autoincrement())
  name               String
  sceneLists         SceneList[]
  fixtureAssignments FixtureAssignment[]
}

model SceneList {
  id          Int     @id @default(autoincrement())
  orderNumber Int
  scenes      Scene[]
  show        Show    @relation(fields: [showId], references: [id])
  showId      Int
}

model Show {
  id         Int         @id @default(autoincrement())
  createdAt  DateTime    @default(now())
  updatedAt  DateTime
  sceneLists SceneList[]
  patches    Patch[]
}

model Patch {
  id           Int     @id @default(autoincrement())
  fixture      Fixture @relation(fields: [fixtureId], references: [id])
  fixtureId    Int
  profile      Profile @relation(fields: [profileId], references: [id])
  profileId    Int
  startAddress Int
  endAddress   Int
  show         Show    @relation(fields: [showId], references: [id])
  showId       Int
}
